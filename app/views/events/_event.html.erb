<div id="<%= dom_id event %>" class="container">
  <div class="row mt-4">
    <div class="col-sm-6">
      <p>
        <strong><%= t('event.title') %></strong>
        <%= event.title %>
      </p>

      <p>
        <strong><%= t('event.description') %></strong>
        <%= event.description %>
      </p>

      <p>
        <strong><%= t('event.date') %></strong>
        <%= event.datetime %>
      </p>
    </div>

    <div class="col-sm-6">
      <p>
        <strong><%= t('event.duration') %></strong>
        <%= event.duration %>
      </p>

      <p>
        <strong><%= t('event.genre') %></strong>
        <%= event.genre %>
      </p>

      <p>
        <strong><%= t('event.address') %></strong>
        <%= event.address %>
      </p>
    </div>
  </div>
</div>

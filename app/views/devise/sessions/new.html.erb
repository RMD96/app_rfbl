<div class="new-devise-row">
  <div class="new-image-container">
    <img src="https://res.cloudinary.com/djuhjudsb/image/upload/v1687826385/development/ev4a51rwos8rls8iqe4h5lgrar5z.jpg" alt="DJ playing">
  </div>
  <div class="welcome-back-container">
    <h2><%= t('login.welcome_back') %></h2>
    <h4><%= t('login.log_in') %></h4>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
      data: { turbo: false }) do |f| %>
      <div class="new-user-form-inputs">
        <p><%= t('login.sign_in_with_email') %></p>
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "form-control" },
                    label: t('login.email') %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "form-control" },
                    label: t('login.password') %>
        <% if devise_mapping.rememberable? %>
          <%= f.input :remember_me, as: :boolean, label: t('login.remember_me') %>
        <% end %>
        <div class="form-actions text-center">
          <%= f.button :submit, t('login.log_in_button'), class: "btn btn-primary btn-block mb-3", style: "width: 100% !important;" %>
        </div>
      </div>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
</div>
